// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CourseGrade {
  id         Int    @id
  name       String
  code       String
  grade      String
  points     Float
  marks      Float
  student_no Int

  @@index([student_no], map: "ix_course_grades_student_no")
  @@map("course_grades")
}

model Faculty {
  id   Int    @id
  name String

  @@map("faculties")
}

model Program {
  id         Int    @id
  name       String
  faculty_id Int

  @@index([faculty_id], map: "ix_programs_faculty_id")
  @@map("programs")
}

model StudentClass {
  id         Int    @id
  name       String
  program_id Int

  @@index([program_id], map: "ix_student_classes_program_id")
  @@map("student_classes")
}

model Student {
  no               Int    @id @default(autoincrement())
  name             String
  student_class_id Int
  remarks          String
  is_blocked       Int

  @@index([student_class_id], map: "ix_students_student_class_id")
  @@map("students")
}
