generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CourseGrade {
  id         Int    @id @default(autoincrement())
  name       String @db.VarChar(100)
  code       String @db.VarChar(20)
  grade      String @db.VarChar(5)
  points     Float  @db.Float
  marks      Float  @db.Float
  student_no Int

  @@index([student_no], map: "ix_course_grades_student_no")
  @@map("course_grades")
}

model Faculty {
  id   Int    @id @default(autoincrement())
  name String @db.VarChar(80)

  @@map("faculties")
}

model Program {
  id         Int    @id @default(autoincrement())
  name       String @db.VarChar(80)
  faculty_id Int

  @@index([faculty_id], map: "ix_programs_faculty_id")
  @@map("programs")
}

model StudentClass {
  id         Int    @id @default(autoincrement())
  name       String @db.VarChar(100)
  program_id Int

  @@index([program_id], map: "ix_student_classes_program_id")
  @@map("student_classes")
}

model Student {
  no               Int    @id @default(autoincrement())
  name             String @db.VarChar(100)
  student_class_id Int

  @@index([student_class_id], map: "ix_students_student_class_id")
  @@map("students")
}

model FacultyRemarks {
  id         Int    @id @default(autoincrement())
  remarks    String @db.Text
  is_blocked Int
  student_no Int

  @@index([student_no], map: "ix_faculty_remarks_student_no")
  @@map("faculty_remarks")
}
